<p id="notice"><%= notice %></p>

<h1><%= @beer_club.name %>, <%= @beer_club.city %></h1>

<p>
  <i>Founded in <%= @beer_club.founded %></i>
</p>

<h3><%= pluralize(@beer_club.members.count, 'member', 'members') %></h3>

<ul>
    <% @beer_club.members.each do |member| %>
    <li><%= member %></li>
    <% end %>
</ul>

<%= link_to('Edit', edit_beer_club_path(@beer_club)) if current_user %> <br>
<%= link_to('Destroy', @beer_club, method: :delete, data: { confirm: 'Are you sure?' }) if current_user %>
