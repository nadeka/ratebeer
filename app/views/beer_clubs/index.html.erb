<h1>Beer clubs</h1>

<h3><%= pluralize(@beer_clubs.count, 'beer club', 'beer clubs') %></h3>

<% if not @beer_clubs.empty? %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Founded</th>
          <th>City</th>
        </tr>
      </thead>

      <tbody>
        <% @beer_clubs.each do |beer_club| %>
          <tr>
            <td><%= link_to "#{beer_club.name}", beer_club %></td>
            <td><%= beer_club.founded %></td>
            <td><%= beer_club.city %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
<% end %>

<br>

<% if ensure_that_admin %>
    <%= link_to('New beer club', new_beer_club_path, class:'btn btn-primary') if current_user %>
<% end %>
