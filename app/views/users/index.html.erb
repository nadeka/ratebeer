<h1>Users</h1>

<h3><%= pluralize(@users.count, 'user', 'users') %></h3>

<% if not @users.empty? %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Username</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to "#{user.username}", user %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
<% end %>

<br>
