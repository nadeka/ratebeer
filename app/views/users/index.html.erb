<h1>Users</h1>

<h3><%= pluralize(@users.count, 'user', 'users') %></h3>

<% if not @users.empty? %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Username</th>
          <th>Total ratings</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to "#{user.username}", user %></td>
            <td><%= user.ratings.size %></td>
            <td>
              <% if ensure_that_admin and not user.active? %>
                <span class="label label-info">account frozen</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
<% end %>

