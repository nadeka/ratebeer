<p id="notice"><%= notice %></p>

<h1>Search beer places</h1>

<%= form_tag places_path do %>
    City
    <div class="field">
        <%= text_field_tag :city, params[:city] %>
    </div>
    <div class="actions">
        <%= submit_tag "Search" %>
    </div>
<% end %>


<% if @places %>
    <table>
      <thead>
        <% Place.rendered_fields.each do |f| %>
          <td><%= f %></td>
        <% end %>
      </thead>
      <% @places.each do |place| %>
        <tr>
          <% Place.rendered_fields.each do |f| %>
            <% if f == :name %>
                <td><%= link_to "#{place.send(f)}", place_path(place.id) %></td>
            <% else %>
                <td><%= place.send(f) %></td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </table>
<% end %>
