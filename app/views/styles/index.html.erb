<p id="notice"><%= notice %></p>

<h1>Styles</h1>

<h3><%= pluralize(@styles.count, 'style', 'styles') %></h3>

<% if not @styles.empty? %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
        </tr>
      </thead>

      <tbody>
        <% @styles.each do |style| %>
          <tr>
            <td><%= link_to "#{style.name}", style %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
<% end %>

<br>

<%= link_to('New style', new_style_path) if current_user %>
