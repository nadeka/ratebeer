<table class="table table-hover">
  <thead>
  <tr>
    <th><%= link_to 'Name', breweries_path(order:"#{@order == 'name_asc' ? 'name_desc' : 'name_asc'}") %></th>
    <th><%= link_to 'Year', breweries_path(order:"#{@order == 'year_asc' ? 'year_desc' : 'year_asc'}") %></th>
  </tr>
  </thead>

  <tbody>
  <% breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
        <td></td>
      </tr>
  <% end %>
  </tbody>
</table>
