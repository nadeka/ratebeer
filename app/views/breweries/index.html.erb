<h1>Breweries</h1>

<h3><%= pluralize(@breweries.count, 'brewery', 'breweries') %></h3>

<% if not @breweries.empty? %>
    <table class="table table-hover">
      <thead>
          <tr>
            <th><%= sortable "name", "Name" %></th>
            <th><%= sortable "year", "Year" %></th>
            <th><%= sortable "active", "Status" %></th>
          </tr>
      </thead>

      <tbody>
      <% @breweries.each do |brewery| %>
          <tr>
            <td><%= link_to brewery.name, brewery %></td>
            <td><%= brewery.year %></td>
            <td><%= brewery.active? ? "Active" : "Retired" %></td>            
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>

<br>

<% if ensure_that_admin %>
    <%= link_to('New brewery', new_brewery_path, class:'btn btn-primary') if current_user %>
<% end %>
